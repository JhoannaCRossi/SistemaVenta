<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Controlar</servlet-name>
        <servlet-class>controlador.Controlar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Valido</servlet-name>
        <servlet-class>controlador.Valido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controlar</servlet-name>
        <url-pattern>/Controlar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Valido</servlet-name>
        <url-pattern>/Valido</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
